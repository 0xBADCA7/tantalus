{
  "name": "tantalus",
  "version": "0.2.0",
  "description": "Alternative cross-platform client for Evernote built in Electron.",
  "main": "index.js",
  "scripts": {
    "build": "npm-run-all build:*",
    "build:css": "stylus src/styles/ --include-css",
    "build:js": "browserify src/app/app.js -o src/js/bundle.js -v",
    "start": "electron .",
    "test": "standard",
    "watch": "npm-run-all --parallel watch:*",
    "watch:css": "stylus -w src/styles/ --include-css",
    "watch:js": "watchify src/app/app.js -o src/js/bundle.js -v"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fmoliveira/tantalus.git"
  },
  "keywords": [
    "evernote",
    "alternative",
    "client",
    "notes",
    "productivity",
    "tasks",
    "lists",
    "to do"
  ],
  "author": "Filipe Oliveira <contato@fmoliveira.com.br>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fmoliveira/tantalus/issues"
  },
  "homepage": "https://github.com/fmoliveira/tantalus#readme",
  "devDependencies": {
    "browserify": "^13.0.0",
    "electron-prebuilt": "^1.2.5",
    "npm-run-all": "^1.6.0",
    "standard": "^6.0.8",
    "stylus": "^0.54.2",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "angular": "^1.5.2",
    "angular-local-storage": "^0.2.7",
    "evernote": "^1.25.82",
    "moment": "^2.12.0",
    "node-uuid": "^1.4.7",
    "photon": "github:connors/photon"
  }
}
